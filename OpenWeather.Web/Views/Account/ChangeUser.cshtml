@model OpenWeather.Models.ChangeUserViewModel
@{
    ViewData["Title"] = "Edit User Information";
}
<div class="placetop">
    <div class="container">
        <!-- START CONTACT DESIGN AREA -->
        <section id="contact" class="contact-area section-padding">
            <div class="container">
                <div class="row">
                    <div class="col-sm-12 contact-sec" style=" background: url('/images/contactsecbg.png')">
                        <!--<div class="row contact-form-design-area">-->
                        <div class="col-md-offset-3 col-md-6 m-auto">
                            <div class="section-title text-center">
                                <h2>Edit User Information</h2>
                                <div class="title-separator-outer ">
                                    <div class="title-separator bg-primary style-liner"></div>
                                </div>
                            </div>
                            <!-- START CONTACT FORM DESIGN AREA -->
                            <div class="login-form">
                                <form id="login-form" method="post" enctype="multipart/form-data">
                                    <div asp-validation-summary="ModelOnly"></div>
                                    <div class="row">
                                        <div class="form-group col-md-12">
                                            <label asp-for="FirstName">First Name</label>
                                            <input asp-for="FirstName" class="form-control" />
                                            <span asp-validation-for="FirstName" class="text-warning"></span>
                                        </div>
                                        <div class="form-group col-md-12">
                                            <label asp-for="LastName">Last Name</label>
                                            <input asp-for="LastName" class="form-control" />
                                            <span asp-validation-for="LastName" class="text-warning"></span>
                                        </div>
                                        <div class="form-group col-md-12 text-center login-btn">
                                            <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Update</button>
                                        </div>
                                        <div class="form-group col-md-12 text-center login-btn">
                                            <a asp-action="ChangePassword" class="btn btn-success"><i class="fa fa-key" aria-hidden="true"></i>Change Password</a>
                                        </div>
                                        <div class="text-success">
                                            @ViewBag.UserMessage
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }

