@model OpenWeather.Web.Models.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
}

<div class="placetop">
    <div class="container">
        <h2 class="blog-heading"><i class="fa fa-key" aria-hidden="true"></i> Reset Password </h2>
        <hr />
        <div class="row">
            <div class="col-md-4 offset-md-4">
                <form asp-action="ResetPassword"  enctype="multipart/form-data">
                    <div asp-validation-summary="All"></div>
                    <input type="hidden" asp-for="UserName" />
                    <input type="hidden" asp-for="Token" />

                    <div class="form-group">
                        <label asp-for="Password">New password</label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-warning"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ConfirmPassword">Confirm</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-warning"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Reset password" class="btn btn-primary" />
                    </div>
                </form>
                <div class="text-success">
                    <p>
                        @ViewBag.Message
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
