@model OpenWeather.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="placetop">
    <div class="container">
        <!-- START CONTACT DESIGN AREA -->
        <section id="contact" class="contact-area" >
            <div class="container">
                <div class="row">
                    <div class="col-sm-12 contact-sec" style=" background: url('/images/contactsecbg.png')">
                        <!--<div class="row contact-form-design-area">-->
                        <div class="col-md-offset-3 col-md-6 m-auto">
                            <div class="section-title text-center">
                                <h2>Login</h2>
                            </div>
                            <!-- START CONTACT FORM DESIGN AREA -->
                            <div class="login-form">
                                <form id="login-form" method="post" enctype="multipart/form-data">
                                    <div asp-validation-summary="ModelOnly"></div>
                                    <div class="row">
                                        <div class="form-group col-md-12">
                                            <label asp-for="Username">Username</label>
                                            <input asp-for="Username" class="form-control" type="email" placeholder="Email" />
                                            <span asp-validation-for="Username" class="text-warning"></span>
                                        </div>
                                        <div class="form-group col-md-12">
                                            <label asp-for="Password">Password</label>
                                            <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                                            <span asp-validation-for="Password" class="text-warning"></span>
                                        </div>
                                        <div class="form-group col-md-6">
                                            <div class="form-check">
                                                <input asp-for="RememberMe" type="checkbox" class="form-check-input" />
                                                <label asp-for="RememberMe" class="form-check-label">Remember Me?</label>
                                                <span asp-validation-for="RememberMe" class="text-warning"></span>
                                            </div>
                                        </div>
                                        <div class="form-group col-md-12 text-center">
                                            <input type="submit" value="Login" class="btn btn-success" />
                                        </div>
                                        <div class="form-group col-md-12 text-center">
                                            @*<a asp-action="Register" class="btn btn-primary">Register New User</a>*@
                                            <div class="form-group col-md-12 text-center">

                                                <a asp-action="RecoverPassword" class="btn btn-link">Forgot your password?</a>
                                            </div>
                                        </div>
                                        
                                    </div>
                                </form>
                            </div>
                            <!-- / END CONTACT FORM DESIGN AREA </div> -->
                        </div>
                    </div>
                </div>
            </div>
        </section>
        </div>
    </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
