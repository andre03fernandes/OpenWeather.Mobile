@model OpenWeather.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "ChangePassword";
}
<div class="placetop">
    <div class="container">
        <!-- START CONTACT DESIGN AREA -->
        <section id="contact" class="contact-area section-padding">
            <div class="container">
                <div class="row">
                    <div class="col-sm-12 contact-sec" style=" background: url('/images/contactsecbg.png')">
                        <!--<div class="row contact-form-design-area">-->
                        <div class="col-md-offset-3 col-md-6 m-auto">
                            <div class="section-title text-center">
                                <h2>Change Password</h2>
                                <div class="title-separator-outer ">
                                    <div class="title-separator bg-primary style-liner"></div>
                                </div>
                            </div>
                            <!-- START CONTACT FORM DESIGN AREA -->
                            <div class="login-form">
                                <form id="login-form" method="post" enctype="multipart/form-data">
                                    <div asp-validation-summary="ModelOnly"></div>
                                    <div class="row">
                                        <div class="form-group col-md-12">
                                            <label asp-for="OldPassword">Current password</label>
                                            <input asp-for="OldPassword" type="password" class="form-control" placeholder="Enter Old Password" />
                                            <span asp-validation-for="OldPassword" class="text-warning"></span>
                                        </div>
                                        <div class="form-group col-md-12">
                                            <label asp-for="NewPassword">New password</label>
                                            <input asp-for="NewPassword" type="password" class="form-control" placeholder="Enter New Password" />
                                            <span asp-validation-for="NewPassword" class="text-warning"></span>
                                        </div>
                                        <div class="form-group col-md-12">
                                            <label asp-for="Confirm">Confirm</label>
                                            <input asp-for="Confirm" type="password" class="form-control" placeholder="Confirm New Password" />
                                            <span asp-validation-for="Confirm" class="text-warning"></span>
                                        </div>
                                        <div class="form-group col-md-12 text-center login-btn">
                                            <input type="submit" value="Change password" class="btn btn-primary" />
                                        </div>
                                        <div class="form-group col-md-12 text-center login-btn">
                                            <a asp-action="ChangeUser" class="btn btn-success"><i class="fa fa-chevron-left"></i>Back to user</a>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }

